<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.progym.pvbhat7.progymfinal.GamesFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_marginTop="60dp"
        android:id="@+id/card1a"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/border"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:background="@drawable/banner1_a"
            android:layout_gravity="center"
            android:id="@+id/image_g1"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        </ImageView>

    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/card1a"
            android:id="@+id/card2a"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:background="@drawable/banner2_a"
                android:layout_gravity="center"
                android:id="@+id/image_g2"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

            </ImageView>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/card2a"
            android:id="@+id/card3a"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:background="@drawable/banner3_a"
                android:layout_gravity="center"
                android:id="@+id/image_g3"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

            </ImageView>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/card3a"
            android:id="@+id/card4a"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">
           <!-- <ImageView

                android:layout_gravity="center"
                android:id="@+id/advertisement"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

            </ImageView>-->
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true" />
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"/>

        </android.support.v7.widget.CardView>










    </RelativeLayout>
</FrameLayout>
